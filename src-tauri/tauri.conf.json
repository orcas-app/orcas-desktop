{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Orcas",
  "version": "0.1.0",
  "identifier": "com.orcas",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Orcas",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:orcascore.db"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "macOS": {
      "signingIdentity": null,
      "hardenedRuntime": true,
      "entitlements": "Entitlements.plist"
    }
  }
}
